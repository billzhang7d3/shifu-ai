{
  "name": "shifu-ai",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "docker:up": "cd api && docker compose up -d",
    "docker:down": "cd api && docker compose down",
    "api:dev": "cd api && cargo run",
    "dev": "npm run docker:up || true && concurrently \"npm run api:dev\" \"vite --port 3000\"",
    "build": "tsc && vite build",
    "preview": "npm run docker:up || true && concurrently \"npm run api:dev\" \"vite preview\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mantine/core": "8.3.12",
    "@mantine/hooks": "8.3.12",
    "@tabler/icons-react": "^3.36.1",
    "pinyin": "^4.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.1.2",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  }
}
